<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteBackground"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".treatment.skincare.Night">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/night_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/appcolor"
        android:gravity="center"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="Choose your garment"
        app:titleTextColor="@color/colorWhiteBackground"
        app:theme="@style/ToolbarColoredBackArrow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhiteBackground"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".treatment.skincare.Night">



        <LinearLayout
            android:id="@+id/garment1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            android:gravity="center"
            android:background="@drawable/ct_daytime_or_nighttime_btn"
            android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="Self Bandaging"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/garment2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:gravity="center"
            android:background="@drawable/ct_daytime_or_nighttime_btn"
            android:orientation="horizontal">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="Chip Foam Garment"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>