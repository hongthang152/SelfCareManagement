<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_orange_A700"
    tools:context=".treatment.exercise.ExerciseListActivity">

    <LinearLayout
        android:id="@+id/linearfortimesave"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/enterLayout"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/savetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@color/md_black_1000"
            android:layout_below="@id/linear"
            android:inputType="textPersonName"
            android:text="DATE "
            />
        <TextView
            android:id="@+id/DateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15dp"
            android:textColor="@color/md_black_1000"
            android:layout_below="@id/savetime"
            android:inputType="textPersonName"
            android:text="Duration"
            />

    </LinearLayout>
    <ListView
        android:layout_below="@id/linearfortimesave"
        android:id="@+id/user_list"
        android:longClickable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp" />

</LinearLayout>