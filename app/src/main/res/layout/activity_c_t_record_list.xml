<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/apptitlebackground"
    tools:context=".ct.CTRecordListActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/record_detail_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/apptitlebackground"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:title="CT Record List"
        app:titleTextColor="@color/brown" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            app:titleTextColor="@color/brown"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="17sp"
            android:gravity="center_horizontal"></TextView>

        <TextView
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            app:titleTextColor="@color/brown"
            android:text="Date &amp; Duration"
            android:textSize="17sp"
            android:gravity="center_horizontal"></TextView>

    </LinearLayout>

    <ListView
        android:id="@+id/ct_list"
        android:longClickable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp" />

</LinearLayout>