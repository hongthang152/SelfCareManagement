<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".treatment.manuallymphdrainagemassage.MLD"
    android:background="#ffce99">

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />
    <!-- Toolbar is the actual app bar with text and the action items -->

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/chronometer"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"


        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custome_button"
            android:onClick="startChronometer"
            android:text="Start" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custome_button"
            android:onClick="pauseChronometer"
            android:text="Pause" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custome_button"
            android:onClick="resetChronometer"
            android:text="Reset" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custome_button"
            android:onClick="StopChronometer"
            android:text="Stop" />

        <!--        <Button-->
        <!--            android:id="@+id/btnHelp"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:onClick="help"-->
        <!--            android:text="Help"-->
        <!--            android:background="@drawable/custome_button"/>-->


    </LinearLayout>

    <LinearLayout
        android:id="@+id/help_vid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <TextView
            android:id="@+id/help_vid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:height="40dp"
            android:gravity="center"
            android:onClick="help"
            android:text="@string/show_help_video" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearfortimesave"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/help_vid_layout"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/savetime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/linear"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Date"
            android:textColor="@color/brown"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/DateTime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/savetime"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Duration"
            android:textColor="@color/brown"
            android:textSize="15dp" />

    </LinearLayout>


    <ListView
        android:layout_below="@id/linearfortimesave"
        android:id="@+id/user_list"
        android:longClickable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp" />

    <Spinner
        android:id="@+id/planets_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
