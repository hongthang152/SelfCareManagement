                            android:layout_height="wrap_content"
                            android:text="54 days ago"
                            android:textColor="@color/colorWhiteBackground"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </RelativeLayout>
