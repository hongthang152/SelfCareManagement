<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ffce99">


    <!-- Toolbar is the actual app bar with text and the action items -->




    <LinearLayout
        android:id="@+id/drawer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:orientation="vertical">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".treatment.TreatmentModuleActivity"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.1">



            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/MLD"
                android:textColor="@color/brown"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="Manual Lymph Drainage (MLD) Massage "
                android:background="@drawable/custome_button"
                />

            <Button
                android:id="@+id/pneumatic"
                android:layout_width="match_parent"
                android:textColor="@color/brown"
                android:background="@drawable/custome_button"
                android:text="Pneumatic Compression Pump"
                android:layout_height="90dp" />

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/CT"
                android:layout_width="match_parent"
                android:textColor="@color/brown"
                android:background="@drawable/custome_button"
                android:layout_height="90dp"
                android:text="Compression Therapy"
                />

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/Exe"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textColor="@color/brown"
                android:background="@drawable/custome_button"
                android:text="Exercise"
                />

            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/SC"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textColor="@color/brown"
                android:background="@drawable/custome_button"
                android:text="Skin Care"
                />
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/LLIS"
                android:layout_width="match_parent"
                android:textColor="@color/brown"
                android:background="@drawable/custome_button"
                android:layout_height="90dp"
                android:text="LLIS Report"
                />
            <Button
                style="@style/Widget.AppCompat.Button.Colored"
                android:id="@+id/measure"
                android:layout_width="match_parent"
                android:textColor="@color/brown"
                android:background="@drawable/custome_button"
                android:layout_height="90dp"
                android:text="Measurement"
                />


        </LinearLayout>
   </ScrollView>

    </LinearLayout>


</RelativeLayout>